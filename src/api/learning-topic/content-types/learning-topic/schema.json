{
  "kind": "collectionType",
  "collectionName": "learning_topics",
  "info": {
    "singularName": "learning-topic",
    "pluralName": "learning-topics",
    "displayName": "Learning Topics"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "summary": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "heroImage": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::learning-module.learning-module",
      "mappedBy": "topic"
    },
    "organization": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "isBaseTemplate": {
      "type": "boolean",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "learningCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::learning-category.learning-category",
      "inversedBy": "topics"
    }
  }
}
