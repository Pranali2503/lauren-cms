{
  "kind": "collectionType",
  "collectionName": "subtopics",
  "info": {
    "singularName": "subtopic",
    "pluralName": "subtopics",
    "displayName": "Subtopic"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "order": {
      "type": "integer"
    },
    "summary": {
      "type": "text"
    },
    "estimatedReadTimeMinutes": {
      "type": "integer"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "contentSteps": {
      "type": "dynamiczone",
      "components": [
        "content.rich-text-block",
        "content.image-block",
        "content.stat-highlight",
        "content.question-block",
        "content.author-block",
        "content.progress-bar",
        "content.embed-block",
        "content.section-block"
      ]
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::learning-module.learning-module",
      "inversedBy": "subtopics"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "authors"
    },
    "organization": {
      "type": "string"
    },
    "isBaseTemplate": {
      "type": "boolean"
    }
  }
}
